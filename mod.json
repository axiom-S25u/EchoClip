{
    "geode": "4.10.0",
    "gd": {
        "win": "2.2074",
        "mac": "2.2074"
    },
    "id": "axiom.echoclip",
    "name": "EchoClip",
    "version": "v1.0.0-beta.1",
    "developer": "Axiom",
    "description": "BETA: Continuous RAM-based recording. Press F6 to save. Might crash AMD drivers.",
    "links": {
        "source": "https://github.com/axiom-S25u/EchoClip"
    },
    "tags": ["performance", "utility", "experimental"],
    "dependencies": [
        {
            "id": "geode.node-ids",
            "version": ">=1.9.2",
            "importance": "required"
        },
        {
            "id": "geode.custom-keybinds",
            "version": ">=1.9.0",
            "importance": "required"
        },
        {
            "id": "eclipse.ffmpeg-api",
            "version": ">=1.2.2",
            "importance": "required"
        }
    ],
    "settings": {
        "enable-recording": {
            "name": "Enable Recording",
            "description": "If unchecked, it wont clip",
            "type": "bool",
            "default": true
        },
        "bitrate": {
            "name": "Bitrate (Mbps)",
            "type": "float",
            "default": 5.0,
            "min": 1.0,
            "max": 20.0
        },
        "mic-audio-volume": {
            "name": "Mic Volume",
            "type": "float",
            "default": 30.0,
            "min": 0.0,
            "max": 100.0
        },
        "use-hardware-encoding": {
            "name": "Hardware Encoding",
            "description": "Disable this if your GPU sparks during recording.",
            "type": "bool",
            "default": true
        }
    }
}